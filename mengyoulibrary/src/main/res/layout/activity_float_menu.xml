<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_login_register_content"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!--  导航菜单区 -->
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@color/ls_transparent_bg_common"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <!-- 我的 -->
        <LinearLayout
            android:id="@+id/layout_float_menu_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_float_menu_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scaleType="center"
                android:src="@drawable/ls_icon_float_user" />

            <TextView
                android:id="@+id/text_float_menu_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="我 的"
                android:textColor="@color/ls_text_gray"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>


        <!-- 礼包 -->
        <LinearLayout
            android:id="@+id/layout_float_menu_gift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_float_menu_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scaleType="center"
                android:src="@drawable/ls_icon_float_gift" />

            <TextView
                android:id="@+id/text_float_menu_gift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="礼 包"
                android:textColor="@color/ls_text_gray"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <!-- 更多 -->
        <LinearLayout
            android:id="@+id/layout_float_menu_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_float_menu_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scaleType="center"
                android:src="@drawable/ls_icon_float_more" />

            <TextView
                android:id="@+id/text_float_menu_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="更 多"
                android:textColor="@color/ls_text_gray"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/ls_transparent_white" />

    <!-- 内容区顶部 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ls_white"
        android:orientation="vertical">

        <!-- WebView通用导航栏 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/img_webview_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:padding="8dp"
                android:scaleType="center"
                android:visibility="gone"
                android:src="@drawable/ls_icon_back_org" />

            <TextView
                android:id="@+id/text_webview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="我的"
                android:textColor="@color/ls_text_gray"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/ls_text_gray_light" />

        <com.mengyousdk.lib.views.weidgets.ProgressWebView
            android:id="@+id/webview_common_my"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
