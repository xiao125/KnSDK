<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
     <LinearLayout android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/select_login_bg"
         android:layout_gravity="center"
         android:orientation="vertical">
              
     <LinearLayout android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/select_login_bg2">
         <ImageView android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/select_login_back1"
             android:layout_gravity="center_vertical"
             android:layout_marginLeft="15dp"
             android:id="@+id/image_back"
             android:paddingLeft="10dp"
             android:paddingRight="10dp"/>
     </LinearLayout>
     
     <LinearLayout android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="60dp"
         android:orientation="horizontal"
         >
         <LinearLayout android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_marginRight="25dp"
             android:gravity="center_horizontal">
             <ImageButton android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/select_login_visit_login"
             android:id="@+id/find_password"
             
            />
             <TextView android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/tips_51"
                 android:textColor="@android:color/black"
                />
         </LinearLayout>
         
         <LinearLayout android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_marginLeft="25dp"
             android:gravity="center_horizontal">
             <ImageButton android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/select_login_account_login"
             android:id="@+id/find_account"
             />
             <TextView android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/tips_66"
                 android:textColor="@android:color/black"
                 />
         </LinearLayout>
         
     </LinearLayout>
</LinearLayout>
</LinearLayout>

