<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >
    <!-- 添加底层布局 -->
    <LinearLayout
        android:id="@+id/account_manager_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/mc_first_login">
        <LinearLayout 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/dp_20"
          android:layout_gravity="center"
          android:orientation="vertical">
                      <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginRight="@dimen/dp_25"
                android:orientation="horizontal">
                 <EditText 
	                 android:id="@+id/account_et"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_gravity="center_vertical"
	                 android:background="@drawable/mc_account"
					 android:hint="请输入您要登录的账号"
	                 android:imeOptions="actionDone"
	                 android:maxLength="12"
	                 android:paddingLeft="@dimen/dp_90"
	                 android:singleLine="true"
	                 android:textColor="@android:color/white"
	                 android:textColorHint="@color/mc_text_color_white"
	                 android:textSize="15dp"/> 
	                 <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_vertical"
	                    android:paddingLeft="@dimen/dp_15"
	                    android:paddingTop="@dimen/dp_5"
	                    android:text="@string/mc_tips_19"/>
            </RelativeLayout>
            <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_25"
                android:orientation="horizontal">
	            <EditText 
	                 android:id="@+id/password__et"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_gravity="center_vertical"
	                 android:background="@drawable/mc_account"
					 android:hint="请输入密码"
					 android:password="true"
					 android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz@-_#@`~,.?/|\"
	                 android:imeOptions="actionDone"
	                 android:maxLength="16"
	                 android:paddingLeft="@dimen/dp_90"
	                 android:singleLine="true"
	                 android:textColor="@android:color/white"
	                 android:textColorHint="@color/mc_text_color_white"
	                 android:textSize="@dimen/dp_15"/>
	                 <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_vertical"
	                    android:paddingLeft="@dimen/dp_15"
	                    android:paddingTop="@dimen/dp_5"
	                    android:text="@string/mc_tips_21"/>
            </RelativeLayout>
	        <RelativeLayout 
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_marginLeft="@dimen/dp_25"
	             android:layout_marginTop="@dimen/dp_2"
	             android:layout_marginRight="@dimen/dp_25"
	             android:orientation="horizontal">
		         <TextView
		             android:id="@+id/forget_passwor" 
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_gravity="center_vertical"
		             android:paddingTop="@dimen/dp_1"
		             android:paddingLeft="@dimen/dp_180"
		             android:textColor="@color/mc_text_color_forget_password"
		             android:text="@string/mc_tips_35"/>
	        </RelativeLayout>
	        <RelativeLayout 
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_marginTop="@dimen/dp_2"
	             android:layout_gravity="center_horizontal"
	             >
		         <Button 
                    android:id="@+id/regist_now"
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_1"
                	android:background="@color/mc_btn_submit_selector"
                	android:text="@string/mc_tips_27"
                	android:textColor="@color/mc_text_color_white"
                 />
		         <Button 
	                android:id="@+id/login_now"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="@dimen/dp_35"
	                android:background="@color/mc_btn_other_selector"
	                android:text="@string/mc_tips_36"
	                android:textColor="@color/mc_text_color_white"
                 />
	        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
